<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/botron">

        <ImageView
            android:id="@+id/img_avt_ve"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0"
            />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txtTenP_ve"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="tenphim"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#ff00"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSoLuong_ve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3 sl"
                    android:gravity="center"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gach"/>

                <TextView
                    android:id="@+id/txtGhe_ve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gie"
                    android:gravity="center"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtThoiGian_ve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9:30"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gach"/>

                <TextView
                    android:id="@+id/txtNgay_ve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12/12/203"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtGia_ve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:textColor="#ff00"
                android:gravity="center"
                android:text=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cbtt_ve"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"/>
            <ImageView
                android:id="@+id/img_del_ve"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/delete"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>