<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/user"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THÔNG TIN CỦA BẠN"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="25dp"/>
    <View
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/black"/>


        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ln_ttcn">
                <ImageView
                    android:src="@drawable/user"
                    android:layout_width="40dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:id="@+id/txtTTUser"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:text="Thông tin cá nhân"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/gach"/>
            <LinearLayout
                android:padding="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ln_dmk">
                <ImageView
                    android:src="@drawable/dmk"
                    android:layout_width="40dp"
                    android:layout_height="55dp"/>
                <TextView
                    android:id="@+id/txtDoiMK"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:text="Đổi Mật Khẩu"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/gach"/>
            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ln_exit">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="55dp"
                    android:src="@drawable/exit" />

                <TextView
                    android:id="@+id/txtDangXuat"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:text="Đăng Xuất"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
